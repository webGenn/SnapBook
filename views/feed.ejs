<%- include("./partials/header") %>

<nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/feed">Snapbook</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/createPost">Create Post</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active bg-danger rounded" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
</nav>

<!-- post showing ui  -->

<div class="post_container"> <!--Main box-->
  <div class="mainContent"> <!--Center wala box-->

    <% if(post.length > 0){ %>
      <% post.forEach((post)=>{ %>
        <div class="user_post">
          <div class="write_post">
            <div class="left_user">
              <div class="user_image"><img src="/images/uploads/<%= post.user.profileImage %>" alt="userImage"></div>
              <div class="about_user">
              <p><%= post.user.name %></p>
              <span><%= post.createdAt.toLocaleString() %></span>
            </div>
            </div>
            <div class="right_user">
              <a href="#">Follow</a>
            </div>
          </div>
          <div class="image_show">
            <img src="/images/uploads/<%= post.postImage %>" alt="postImage">
          </div>
          <p id="caption"><%= post.caption %></p>
          <a href="/like/post/<%= post._id %>" id="like">
            <div class="icons">
              <% if(post.likes.indexOf(loggedUser._id) !== -1){ %>
                <i class="fa-solid fa-thumbs-up"></i>
              <% }else{ %>
                <i class="fa-regular fa-thumbs-up"></i>
             <% } %>
              <span>Like</span>
              <span><%= post.likes.length %></span>
            </div>
          </a>
        </div>
      <% }) %>
    <% }else{ %>
      <p style="margin-top: 30px; font-family: Poppins;">No Posts Yet</p>
    <% } %>

  </div>
</div>

<%- include("./partials/footer") %>